<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.TilePane?>

<?import javafx.scene.control.ScrollPane?>
<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.View.RecomendacionController">

    <children>
        <!-- TÃ­tulo -->
        <Label layoutX="14.0" layoutY="14.0" prefHeight="32.0" prefWidth="500.0"
               text="Recomendaciones para reducir tus niveles de CO2"
               style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <!-- ScrollPane para permitir desplazamiento en caso de muchas recomendaciones -->
        <ScrollPane layoutX="20.0" layoutY="60.0" prefHeight="320.0" prefWidth="560.0"
                    fitToWidth="true" fitToHeight="true">

            <!-- TilePane para mostrar las recomendaciones -->
            <TilePane fx:id="tilePaneRecomendaciones"
                      hgap="10" vgap="10"
                      prefTileWidth="250.0"
                      prefTileHeight="100.0"
                      style="-fx-padding: 10;">
            </TilePane>

        </ScrollPane>
    </children>
</AnchorPane>
